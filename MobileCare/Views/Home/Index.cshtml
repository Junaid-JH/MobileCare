                <div class="col-md-4 col-lg-4 col-xl-3 mx-auto mb-4" data-aos="fade-right">
                    <!-- Content -->
                    <h6 class="text-uppercase fw-bold">MobileCare</h6>
                    <hr class="mb-4 mt-0 d-inline-block mx-auto" />
                    <p>
                        Taking care of your health, the right way.
                    </p>
                </div>
                
                <!-- Grid column -->

                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4" data-aos="fade-right">
                    <h6 class="text-uppercase fw-bold">Contact</h6>
                    <hr class="mb-4 mt-0 d-inline-block mx-auto" />
                    <p><i class="fas fa-home mr-3"></i> Port Elizabeth, ZA</p>
                    <p><i class="fas fa-envelope mr-3"></i> info@mobilecare.com</p>
                    <p><i class="fas fa-phone mr-3"></i> 041 481 0617</p>
                </div>

                <!-- Grid column -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4" data-aos="fade-right">
                    <!-- Links -->
                    <h6 class="text-uppercase fw-bold">Useful links</h6>
                    <hr class="mb-4 mt-0 d-inline-block mx-auto" />
                    <p>
                        <a href="#!" class="text-dark  ">Faqs</a>
                    </p>
                    <p>
                        <a href="#!" class="text-dark">Become a careworker</a>
                    </p>
                    <p>
                        <a href="#!" class="text-dark">Help</a>
                    </p>
                </div>
                <!-- Grid column -->
            </div>
            <!-- Grid row -->
        </div>
    </section>
</footer><!-- End Footer --> 

