@{
    ViewData["Title"] = "Home";
}

@section HtmlHead{
    <link rel="stylesheet" href="~/css/home-index.css" />
}
    <!-- ======= Header ======= -->
    @section HtmlHeader{
    
        <nav id="navbar" class="navbar order-last order-lg-0">
            <ul>
                <li><a class="nav-link scrollto " href="#home">Home</a></li>
                <li><a class="nav-link scrollto" href="#about">About</a></li>

                <li><a class="nav-link scrollto" href="#footer">Contact</a></li>
            </ul>
            <i class="ms-2 bi bi-list mobile-nav-toggle"></i>
        </nav>
    }


<!-- ======= home Section ======= -->
<section id="home" data-aos="fade-in" >
        <div id="homeCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">

            <ol class="carousel-indicators" id="home-carousel-indicators"></ol>

            <div class="carousel-inner" role="listbox">

                <!-- Slide 1 -->
            <div class="carousel-item active" style="background-image: url(img/mobilecare-slide1.png)">
                    <div class="container">
                        <h2>Welcome to <span>MobileCare</span></h2>
                    <p>Taking care of your health, the right way.</p>
                    <a href="#about" class="btn-get-started scrollto">Read More</a>
                    </div>
                </div>

                <!-- Slide 2 -->
            <div class="carousel-item" style="background-image: url(img/mobilecare-slide2.png)">
                    <div class="container">
                    <h2>We care for the elderly</h2>
                    <p>We take great care of the elderly by making them feel comfortable and loved!</p>
                    <a href="#about" class="btn-get-started scrollto">Read More</a>
                    </div>
                </div>

                <!-- Slide 3 -->
            <div class="carousel-item" style="background-image: url(img/mobilecare-slide3.png)">
                    <div class="container">
                    <h2>We care for people with disabilities</h2>
                    <p>Enjoy spending time outdoors? Need assistance? We got you covered!</p>
                    <a href="#about" class="btn-get-started scrollto">Read More</a>
                    </div>
                </div>

            <!-- Slide 4 -->
            <div class="carousel-item" style="background-image: url(img/mobilecare-slide4.png)">
                <div class="container">
                    <h2>Caring and competent health workers</h2>
                    <p>Our health workers are highly trained to meet your every need!</p>
                    <a href="#about" class="btn-get-started scrollto">Read More</a>
                </div>
            </div>

            <!-- Slide 5 -->
            <div class="carousel-item" style="background-image: url(img/mobilecare-slide5.png)">
                <div class="container">
                    <h2>Thorough analysis of reports</h2>
                    <p>Our health workers capture every detail to ensure improvement of our patients!</p>
                    <a href="#about" class="btn-get-started scrollto">Read More</a>
                </div>
            </div>

            <!-- Slide 6 -->
            <div class="carousel-item" style="background-image: url(img/mobilecare-slide6.png)">
                <div class="container">
                    <h2>Happy patients</h2>
                    <p>Our patients are always satisfied and happy!</p>
                    <a href="#about" class="btn-get-started scrollto">Read More</a>
                </div>
            </div>
            </div>
            <a class="carousel-control-prev" href="#homeCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#homeCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
            </a>
        </div>
    </section><!-- End home -->

    <main id="main">

        <!-- ======= About Section ======= -->
        <section id="about" class="about">
            <div class="container">

                <div class="row">
                    <div class="col-md-4 col-lg-4 d-flex align-items-stretch mb-5 mb-lg-0">
                        <div class="icon-box"  data-aos="fade-up" data-aos-delay="100">
                        <div class="icon"> <i class="fa-solid fa-coins"></i></div>
                        <h4 class="title">Affordability</h4>
                        <p class="description">We understand that healthcare can be expensive and this is exactly why we have kept our rates as low as possible. Since we are a large organisation, we are able to provide quality health care which is considered affordable by many.</p>
                        </div>
                    </div>

                    <div class="col-md-4 col-lg-4 d-flex align-items-stretch mb-5 mb-lg-0">
                        <div class="icon-box" data-aos="fade-up" data-aos-delay="200">
                        <div class="icon"> <i class="fa-solid fa-thumbs-up"></i></div>
                        <h4 class="title">Simplicity</h4>
                        <p class="description">We are a home based health care practice with one goal in mind; to simplify all related processes. Our system addresses the needs of practice entities such as general practitioners, patients, nurses, rehabilitation as well as other entities. Our goal is to simplify the process of paperwork, scheduling, planning and more.</p>
                        </div>
                    </div>

                    <div class="col-md-4 col-lg-4 d-flex align-items-stretch mb-5 mb-lg-0">
                        <div class="icon-box" data-aos="fade-up" data-aos-delay="300">
                        <div class="icon"> <i class="fas fa-heartbeat"></i> </div>
                        <h4 class="title">Quality of Service</h4>
                        <p class="description">We understand that trusting a stranger may be difficult, especially when it comes to your health. Therefore, we ensure that only the best care givers are recruited with years of training and experience to ensure patients are given the best treatment possible.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- End About Section -->

        <!-- ======= Cta Section ======= -->
    <section id="cta" class="cta" data-aos="zoom-in" >
            <div class="container">

                <div class="text-center">
                    <h3>Want to be apart of our family?</h3>
                    <p> Get in touch with us today!</p>
                    
                </div>

            </div>
        </section><!-- End Cta Section -->
       
    </main><!-- End #main -->


 <footer id="footer" >

    <!-- Section: Social media -->
    <section class=" social-media-links d-flex justify-content-between align-items-center p-2 text-white">
        <!-- Left -->
        <div class="me-3" data-aos="fade-right">
            <span>Get connected with us on social networks:</span>
        </div>
        <!-- Left -->
        <!-- Right -->
        <div class="social-media-links"  data-aos="fade-left">
            <div class="d-flex">
            <a href="" class="text-white me-4">
                <i class="facebook fab fa-facebook-f"></i>
            </a>

            <a href="" class="text-white me-4">
                <i class="instagram fab fa-instagram"></i>
            </a>
            <a href="" class="text-white me-4">
                <i class="linked-in fab fa-linkedin"></i>
            </a>
            </div>
        </div>
        <!-- Right -->
    </section>

    <!-- Section: Links  -->
    <section class="useful-links">
        <div class="container text-center text-md-start mt-5">
            <!-- Grid row -->
            <div class="row mt-3" @*data-aos="fade-right"*@>
